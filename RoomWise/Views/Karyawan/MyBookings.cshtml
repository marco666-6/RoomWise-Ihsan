@model List<RoomWise.Models.Booking>
@using RoomWise.Function
@{
    ViewData["Title"] = "My Bookings";
    ViewData["PageTitle"] = "My Bookings";
}

@section Sidebar {
    <div class="nav-section">
        <div class="nav-section-title">Main</div>
        <div class="nav-item">
            <a class="nav-link @Html.IsActive("Karyawan", "Index")" asp-controller="Karyawan" asp-action="Index">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
        </div>
    </div>

    <div class="nav-section">
        <div class="nav-section-title">Bookings</div>
        <div class="nav-item">
            <a class="nav-link @Html.IsActive("Karyawan", "Rooms")" asp-controller="Karyawan" asp-action="Rooms">
                <i class="bi bi-door-open"></i>
                <span>View Rooms</span>
            </a>
        </div>
        <div class="nav-item">
            <a class="nav-link @Html.IsActive("Karyawan", "BookRoom")" asp-controller="Karyawan" asp-action="BookRoom">
                <i class="bi bi-calendar-plus"></i>
                <span>Book Room</span>
            </a>
        </div>
        <div class="nav-item">
            <a class="nav-link @Html.IsActive("Karyawan", "MyBookings")" asp-controller="Karyawan" asp-action="MyBookings">
                <i class="bi bi-calendar-check"></i>
                <span>My Bookings</span>
            </a>
        </div>
    </div>

    <div class="nav-section">
        <div class="nav-section-title">Account</div>
        <div class="nav-item">
            <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">My Bookings</h2>
            <p class="text-muted">View and manage your room reservations</p>
        </div>
        <a href="@Url.Action("BookRoom", "Karyawan")" class="btn btn-primary">
            <i class="bi bi-calendar-plus me-2"></i>New Booking
        </a>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check text-primary fs-1 mb-2"></i>
                    <h4 class="mb-0">@Model.Count(b => b.bkg_status == "Upcoming")</h4>
                    <small class="text-muted">Upcoming</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle text-success fs-1 mb-2"></i>
                    <h4 class="mb-0">@Model.Count(b => b.bkg_status == "Completed")</h4>
                    <small class="text-muted">Completed</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-secondary">
                <div class="card-body text-center">
                    <i class="bi bi-x-circle text-secondary fs-1 mb-2"></i>
                    <h4 class="mb-0">@Model.Count(b => b.bkg_status == "Cancelled")</h4>
                    <small class="text-muted">Cancelled</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover" id="bookingsTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Room</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Duration</th>
                        <th>Purpose</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var booking in Model)
                    {
                        var duration = booking.bkg_end_time - booking.bkg_start_time;
                        var canCancel = booking.bkg_status == "Upcoming" && 
                                      (booking.bkg_dt.Add(booking.bkg_start_time) - DateTime.Now).TotalHours >= 2;
                        var canFeedback = booking.bkg_status == "Completed";

                        <tr>
                            <td>@booking.bkg_id</td>
                            <td>
                                <strong>@booking.rom_name</strong>
                                @if(booking.bkg_attendees.HasValue)
                                {
                                    <br><small class="text-muted">@booking.bkg_attendees attendees</small>
                                }
                            </td>
                            <td>@booking.bkg_dt.ToString("dd MMM yyyy")</td>
                            <td>
                                @booking.bkg_start_time.ToString(@"hh\:mm") <br>
                                <small class="text-muted">to @booking.bkg_end_time.ToString(@"hh\:mm")</small>
                            </td>
                            <td>@duration.TotalMinutes min</td>
                            <td>
                                <span data-bs-toggle="tooltip" title="@booking.bkg_purpose">
                                    @(booking.bkg_purpose?.Length > 30 ? booking.bkg_purpose.Substring(0, 30) + "..." : booking.bkg_purpose)
                                </span>
                            </td>
                            <td>
                                @if(booking.bkg_status == "Upcoming")
                                {
                                    <span class="badge bg-primary">Upcoming</span>
                                }
                                else if(booking.bkg_status == "Completed")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Cancelled</span>
                                    @if(!string.IsNullOrEmpty(booking.bkg_cancelled_reason))
                                    {
                                        <br><small class="text-muted">@booking.bkg_cancelled_reason</small>
                                    }
                                }
                            </td>
                            <td>
                                @if(canCancel)
                                {
                                    <button class="btn btn-sm btn-outline-danger" onclick="cancelBooking(@booking.bkg_id, '@booking.rom_name', '@booking.bkg_dt.ToString("dd MMM yyyy")', '@booking.bkg_start_time.ToString(@"hh\:mm")')">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </button>
                                }
                                @if(canFeedback)
                                {
                                    <a href="@Url.Action("Feedback", "Karyawan", new { bookingId = booking.bkg_id })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-star"></i> Feedback
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Cancel Booking Modal -->
<div class="modal fade" id="cancelBookingModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-x-circle me-2"></i>Cancel Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Karyawan" asp-action="CancelMyBooking" method="post">
                <input type="hidden" name="id" id="cancel_id">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Are you sure you want to cancel this booking?
                    </div>
                    <div class="mb-3">
                        <strong>Room:</strong> <span id="cancel_room"></span><br>
                        <strong>Date:</strong> <span id="cancel_date"></span><br>
                        <strong>Time:</strong> <span id="cancel_time"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cancellation Reason (Optional)</label>
                        <textarea class="form-control" name="reason" rows="3" placeholder="Why are you cancelling this booking?"></textarea>
                    </div>
                    <div class="alert alert-info small mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        Bookings can only be cancelled at least 2 hours before the scheduled time.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Cancel Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#bookingsTable').DataTable({
                order: [[2, 'desc'], [3, 'desc']],
                pageLength: 15,
                responsive: true
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        function cancelBooking(id, room, date, time) {
            $('#cancel_id').val(id);
            $('#cancel_room').text(room);
            $('#cancel_date').text(date);
            $('#cancel_time').text(time);
            $('#cancelBookingModal').modal('show');
        }
    </script>
}
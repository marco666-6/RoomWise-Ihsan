@model List<RoomWise.Models.Booking>
@using RoomWise.Function
@{
    ViewData["Title"] = "Bookings Management";
    ViewData["PageTitle"] = "Bookings Management";
}

@section Sidebar {
    <div class="nav-section">
        <div class="nav-section-title">Main</div>
        <div class="nav-item">
            <a class="nav-link @Html.IsActive("Admin", "Index")" asp-controller="Admin" asp-action="Index">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
        </div>
    </div>

    <div class="nav-section">
        <div class="nav-section-title">Management</div>
        <div class="nav-item">
            <a class="nav-link @Html.IsActive("Admin", "Users")" asp-controller="Admin" asp-action="Users">
                <i class="bi bi-people"></i>
                <span>Users</span>
            </a>
        </div>
        <div class="nav-item">
            <a class="nav-link @Html.IsActive("Admin", "Rooms")" asp-controller="Admin" asp-action="Rooms">
                <i class="bi bi-door-open"></i>
                <span>Rooms</span>
            </a>
        </div>
        <div class="nav-item">
            <a class="nav-link @Html.IsActive("Admin", "Bookings")" asp-controller="Admin" asp-action="Bookings">
                <i class="bi bi-calendar-check"></i>
                <span>Bookings</span>
            </a>
        </div>
    </div>

    <div class="nav-section">
        <div class="nav-section-title">Account</div>
        <div class="nav-item">
            <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Bookings Management</h2>
            <p class="text-muted">Manage all room reservations</p>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBookingModal">
            <i class="bi bi-calendar-plus me-2"></i>Create Booking
        </button>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover" id="bookingsTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Room</th>
                        <th>PIC</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Purpose</th>
                        <th>Attendees</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var booking in Model)
                    {
                        <tr>
                            <td>@booking.bkg_id</td>
                            <td><strong>@booking.rom_name</strong></td>
                            <td>@booking.usr_name</td>
                            <td>@booking.bkg_dt.ToString("dd MMM yyyy")</td>
                            <td>
                                @booking.bkg_start_time.ToString(@"hh\:mm") - @booking.bkg_end_time.ToString(@"hh\:mm")
                            </td>
                            <td>@(booking.bkg_purpose?.Length > 30 ? booking.bkg_purpose.Substring(0, 30) + "..." : booking.bkg_purpose)</td>
                            <td>@(booking.bkg_attendees?.ToString() ?? "-")</td>
                            <td>
                                @if(booking.bkg_status == "Upcoming")
                                {
                                    <span class="badge bg-primary">Upcoming</span>
                                }
                                else if(booking.bkg_status == "Completed")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Cancelled</span>
                                }
                            </td>
                            <td>
                                @if(booking.bkg_status == "Upcoming")
                                {
                                    <button class="btn btn-sm btn-outline-danger" onclick="cancelBooking(@booking.bkg_id, '@booking.rom_name')">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Booking Modal -->
<div class="modal fade" id="addBookingModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-calendar-plus me-2"></i>Create New Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Admin" asp-action="AddBooking" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Room</label>
                            <select class="form-select" name="roomId" required>
                                <option value="">Select Room</option>
                                @foreach(var room in ViewBag.Rooms)
                                {
                                    <option value="@room.rom_id">@room.rom_name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">PIC (Person in Charge)</label>
                            <select class="form-select" name="userId" required>
                                <option value="">Select User</option>
                                @foreach(var user in ViewBag.Users)
                                {
                                    <option value="@user.usr_id">@user.usr_name</option>
                                }
                            </select>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" name="date" required min="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Start Time</label>
                            <input type="time" class="form-control" name="startTime" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">End Time</label>
                            <input type="time" class="form-control" name="endTime" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Purpose/Agenda</label>
                        <textarea class="form-control" name="purpose" rows="3" required placeholder="Describe the meeting purpose..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Number of Attendees (Optional)</label>
                        <input type="number" class="form-control" name="attendees" min="1" max="255" placeholder="Expected number of participants">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Cancel Booking Modal -->
<div class="modal fade" id="cancelBookingModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-x-circle me-2"></i>Cancel Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Admin" asp-action="CancelBooking" method="post">
                <input type="hidden" name="id" id="cancel_id">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Are you sure you want to cancel this booking for <strong id="cancel_room_name"></strong>?
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cancellation Reason</label>
                        <textarea class="form-control" name="reason" rows="3" placeholder="Explain why this booking is being cancelled..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Cancel Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#bookingsTable').DataTable({
                order: [[3, 'desc'], [4, 'desc']],
                pageLength: 15,
                responsive: true
            });

            $('.form-select').select2({
                theme: 'bootstrap-5',
                dropdownParent: $('.modal.show')
            });
        });

        function cancelBooking(id, roomName) {
            $('#cancel_id').val(id);
            $('#cancel_room_name').text(roomName);
            $('#cancelBookingModal').modal('show');
        }
    </script>
}